<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>

      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
   </thead>

   <tbody>
   	<% @posts.each do |post|%>
   	<tr>
   	<td><%= post.title %></td>
   	<td><%= post.description %></td>
    <td><%= image_tag post.picture_url(:thumb) if post.picture? %></td>
   	<td><%= link_to 'Show',post, class:'btn btn-mini btn-success' %></td>
   	</tr>	
   	<% end %>



   </tbody>

 
</table>
</div>
</div>
<br>
<div class='btn_holder'>
  <% if @user %>
	<%= link_to 'Add Posts', new_post_path, class:'btn btn-mini btn-info' %>
  <% else %>
  <%= link_to 'Add Posts', new_user_session_path, class:'btn btn-mini btn-info' %>
  <% end %>
</div>