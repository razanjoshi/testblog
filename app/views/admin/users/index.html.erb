<h1>Listing users</h1> 
<table class="table table-hover">
  <thead>
    <tr>

      <th>ID</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
   </thead>

   <tbody>
   	<% @users.each do |user|%>
   	<tr>
   	<td><%= user.id %></td>
   	<td><%= user.email %></td>
    <td><%= user.is_admin? ? "Admin" : "Normal" %></td>

    <td><%= link_to 'Destroy',admin_user_path(user), method: :delete, class:'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %> </td>
   	</tr>	
   	<% end %>



   </tbody>

 
</table>
<%= link_to 'New User', new_admin_user_path %>