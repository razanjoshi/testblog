<%= form_for([:admin, @user], url: admin_users_path) do |f| %>
  
  <% if @user.errors.any? %>
    <div class='immediate_feedback'>
      <ul>  
        <% @user.errors.full_messages.each do |msg| %>  
          <li><%= msg %></li>  
        <% end %>  
      </ul>
    </div>
  <% end %>
  
  <%= f.label :email, "Email Address" %><br>
  <%= f.text_field :email, :class => "bigtext" %><br>
  <%= f.label :password, "Password" %><br>
  <%= f.text_field :password, :class => "bigtext" %><br>
  <%= f.label :name, "Name" %><br>
  <%= f.text_field :name, :class => "bigtext" %><br>
  <%= f.label :phone, "Phone" %><br>
  <%= f.text_field :phone, :class => "bigtext" %><br>
  <br>
  <%= f.submit %>
<% end %>
  