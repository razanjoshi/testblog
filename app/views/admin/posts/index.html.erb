<h1>Listing Posts</h1> 
<table class="table table-hover">
  <thead>
    <tr>

      <th>Title</th>
      <th>Description</th>
      <th>Posted by</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
   </thead>

   <tbody>
    <% @posts.each do |post|%>
    <tr>
    <td><%= post.title %></td>
    <td><%= post.description %></td>
    <td><%= post.user.try('name') %></td>
    <td><%= image_tag post.picture_url(:thumb) if post.picture? %></td>
    <td><%= link_to 'Show',post, class:'btn btn-mini btn-success' %></td>
    <td><%= link_to 'Destroy', post, method: :delete, class:'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
    </tr> 
    <% end %>



   </tbody>

 
</table>
<%= link_to 'New Post', new_admin_post_path %>